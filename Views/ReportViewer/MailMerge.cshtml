@section SampleHeading{ <span class="sampleName">ReportViewer/MailMerge</span>}

@using Syncfusion.JavaScript
@using Syncfusion.MVC.EJ

@section StyleSection{
    <style>
        #reportviewer {
            min-height: 650px;
            min-width: 100%;
        }
    </style>
}
@section ScriptReferenceSection{
}

@section ControlsSection{
   <div style="width:100%">
        @(Html.EJ().ReportViewer("reportviewer")
              .ProcessingMode(Syncfusion.JavaScript.ReportViewerEnums.ProcessingMode.Remote).ReportPath("~/App_Data/Reports/MailMerge.rdl")
              .ReportServiceUrl(VirtualPathUtility.ToAbsolute("~/api/RDLCReport"))
        )
    </div>
}