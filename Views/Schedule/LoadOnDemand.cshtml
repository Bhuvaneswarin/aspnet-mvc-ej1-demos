@section SampleHeading{
    <span class="sampleName">Schedule / Load On Demand</span>}

@section ControlsSection{
        @{List<string> view = new List<string>() { "Day", "Week", "WorkWeek", "Month" };}
        @(Html.EJ().Schedule("Schedule1")
        .Width("100%")
        .Height("525px")
        .Views(view)
        .DateFormat("MM/dd/yyyy")
        .EnableLoadOnDemand(true)
        .CurrentDate(new DateTime(2017,6,5))
        .ShowAppointmentNavigator(false)
        .AppointmentSettings(fields => fields.Datasource(ds=>ds.URL("GetRecords").CrudURL("CrudResult").Adaptor(AdaptorType.UrlAdaptor))
            .Id("Id")
            .Subject("Subject")
            .StartTime("StartTime")
            .EndTime("EndTime")
            .Description("Description")
            .AllDay("AllDay")
            .StartTimeZone("StartTimeZone")
            .EndTimeZone("EndTimeZone")
            .Recurrence("Recurrence")
            .RecurrenceRule("RecurrenceRule"))
        )
}
